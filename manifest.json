{
  "manifest_version": 3,
  "name": "DNS, Whois, SSL, Hosting Lookup - Loruv",
  "version": "8.5",
  "description": "DNS, Whois, SSL, Hosting Lookup",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus",
    "clipboardWrite",
    "browsingData"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "DNS, Whois, SSL, Hosting Lookup - Loruv",
    "default_icon": {
      "16": "icons/logo-16.png",
      "32": "icons/logo-32.png",
      "48": "icons/logo-48.png",
      "128": "icons/logo-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/logo-16.png",
    "32": "icons/logo-32.png",
    "34": "icons/logo-34.png",
    "48": "icons/logo-48.png",
    "128": "icons/logo-128.png"
  }
}
